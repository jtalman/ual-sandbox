double k       = R0*p0*v0;                         //

//                   probe deviations
double  dx     = 0.015;
double  dy     = 0.04; 
double  dz     = 0.0; 

double dpx     = 0.0; 
double dpy     = 0.0; 
double dpz     = 0.0; 

double dt      = 0.0; 
//                   probe deviations

double rin     = R0+dx;                            //
double rinEx   = sqrt((R0+dx)*(R0+dx)+dy*dy+dz*dz);//
double gamma   = gamma0;                           //
double Ein     = gamma*m0*c*c-k/rinEx;             // E for compatibility with Munoz

double Edes    = m0*c*c/gamma0;                    // Design Energy (Munoz potential)
double dE      = Ein-Edes; 

double dpxbyp0 = dpx/p0; 
double dpybyp0 = dpy/p0; 
double dEbyp0  = dE /p0;

PAC::Bunch bunch(1);                               // bunch with 1 particle(s)
bunch.setBeamAttributes(ba);
bunch[0].getPosition().set(dx,dpxbyp0,dy,dpybyp0,dt,dEbyp0);

#include "printProbeValues"
